{{ $root := (toml `
    orange = "#ee893a"
    black = "#0a0b0b"
    off_black = "#1c1e1f"
    white = "#e8e6e3"

    code = "#414558"
    code_border = "#252525"
`) -}}

@font-face {
    font-family: Poppins;
    src: url(/fonts/Poppins-Regular.woff2) format('woff2'),
        url(/fonts/Poppins-Regular.woff) format('woff');
    font-display: swap;
}

body {
    font-family: Poppins;
    background-color: {{$root.black}};
    color: {{$root.white}};
    overflow-x: hidden;
    font-size: 20px;
}

#topnav, #topnav div, .card-container{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

#topnav, .card-container {
    margin: 1.5em 15%;
}

#topnav a {
    margin: .25em;
    text-align: center;
}

a {
    text-decoration: none;
    font-weight: 700;
    color: white;
}

a:hover, .fold h2 > label:hover {
    color: {{$root.orange}};
    cursor: pointer;
}

#splash {
    margin-top: 30vh;
    text-align: center;
}

#splash-image {
    position: absolute;
    top: 0;
    left: 50%;
    z-index: -1;
}

#splash-image img {
    position: relative;
    max-height: 100vh;
    max-width: 100vw;
    display: block;
    left: -50%;
}

#splash-image:after {
    display:block;
    content:'';
    position:absolute;
    width:100%;
    height:100%;
    top: 0;
    left: -50%;
    box-shadow: 0 0 15vh 15vh {{$root.black}} inset;
}

#body {
    position: absolute;
    top: 100vh;
    width: 100%;
}

.section {
    text-align: center;
}

.card-container {
    flex-wrap: wrap;
    justify-content: center;
}

.card {
    min-height: 290px;
    width: 240px;
    border-radius: .5em;
    background-color: {{$root.off_black}};
    border: {{$root.orange}} solid;
    border-width: 3px;
    padding: 15px;
    text-align: center;
    transition: width 0.5s, min-height 0.5s, padding-left 0.5s, padding-right 0.5s, margin 0.5s;
    margin: 25px;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
}

.card:hover {
    min-height: 300px;
    width: 250px;
    padding-left: 20px;
    padding-right: 20px;
    margin: 20px;
}

.card svg {
    fill: {{$root.orange}};
}

.card-title {
    color: {{$root.orange}};
}

.fold-container {
    margin: 1.5em 15%;
    border-radius: .5em;
    background-color: {{$root.off_black}};
    border: {{$root.orange}} solid;
    border-width: 3px;
    padding: 15px;
}

.fold-container > hr {
    border-color: {{$root.orange}};
    background-color: {{$root.orange}};
    color: {{$root.orange}};
}

.fold > input {
    opacity: 0;
    position: absolute;
}

.fold > input:checked + h2 + div {
    display: block;
}

.fold > div {
    display: none;
    overflow-y: hidden;
}

.fold > .fold-container {
    margin: 0;
}

code {
    border-radius: 0.3rem;
    background-color: {{$root.code}};
    border: 1px solid {{$root.code_border}};
    padding-left: 0.2rem;
    padding-right: 0.2rem;
}
