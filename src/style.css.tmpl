{{ $root := (toml `
    orange = "#ee893a"
    black = "#0a0b0b"
    white = "#e8e6e3"
`) -}}

@font-face {
    font-family: Poppins;
    src: url(/fonts/Poppins-Regular.woff2) format('woff2'),
        url(/fonts/Poppins-Regular.woff) format('woff');
    font-display: swap;
}

body {
    font-family: Poppins;
    background-color: {{$root.black}};
    color: {{$root.white}};
}

#topnav, #topnav div {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

#topnav {
    margin: 1.5em 15%;
}

#topnav a {
    margin: .25em;
    text-align: center;
}

a {
    text-decoration: none;
    font-weight: 700;
    color: white;
}

a:hover {
    color: {{$root.orange}};
}

#splash {
    margin-top: 30vh;
    text-align: center;
}

#splash-image {
    position: absolute;
    top: 0;
    left: 50%;
    z-index: -1;
}

#splash-image img {
    position: relative;
    max-height: 100vh;
    max-width: 100vw;
    display: block;
    left: -50%;
}

#splash-image:after {
    display:block;
    content:'';
    position:absolute;
    width:100%;
    height:100%;
    top: 0;
    left: -50%;
    box-shadow: 0 0 15vh 15vh {{$root.black}} inset;
}
